@model List<User> 

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <!-- Giữ lại nút tạo user mới nếu cần -->
            <a asp-controller="User" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New User</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>User Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.UserName</td>
                <td>@obj.Email</td>
                <td>@obj.PhoneNumber</td>
                <td>
                    @foreach(var userRole in obj.UserRoles)
                    {
                        <span>@userRole.Role.RoleName</span><br />
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <!-- Chỉ giữ lại nút xóa -->
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.UserId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>