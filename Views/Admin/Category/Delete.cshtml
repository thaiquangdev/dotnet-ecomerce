@model Category

<form method="post">
    <input asp-for="CategoryId" type="hidden"/>
    <div class="border p-3 p-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="CategoryName" class="p-0"></label>
            <input asp-for="CategoryName" readonly class="form-control">
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @Html.Partial("ToastNotifications")
}
