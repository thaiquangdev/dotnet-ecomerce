@model List<Role> 


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Role</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                
                <td>@obj.RoleName</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@obj.RoleId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@obj.RoleId" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>