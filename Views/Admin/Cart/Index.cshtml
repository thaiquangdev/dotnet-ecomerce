@model List<Cart>

<div class="container">
    <h2>Order List</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Buyer Name</th>
                <th>Total Amount</th>
                <th>Created At</th>
                <th>Status</th>
                <th>Order Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@cart.CartId</td>
                    <td>@cart.User.UserName</td> <!-- Tên người mua -->
                    <td>@cart.TotalPrice</td>
                    <td>@cart.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>@cart.Status</td>
                    <td>
                        <!-- Hiển thị chi tiết sản phẩm trong đơn hàng -->
                        <ul>
                            @foreach (var item in cart.CartItems)
                            {
                                <li>
                                    Sản phẩm: @item.Product.Title - Số lượng: @item.Quantity - Giá: @item.Price
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>