@model List<asp_mvc.Models.Cart>

<div class="container my-4">
    <div class="row">
        <!-- Thông tin mua hàng -->
        <div class="col-md-6">
            <h2 class="title-shopper mb-4">Điền thông tin mua hàng</h2>
            <div class="form-content p-4 border rounded bg-light">
                <form>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">Thành phố</label>
                        <input type="text" class="form-control" id="city" placeholder="Nhập thành phố">
                    </div>
                    <div class="mb-3">
                        <label for="zipCode" class="form-label">Mã zip</label>
                        <input type="text" class="form-control" id="zipCode" placeholder="Nhập mã zip">
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Đất nước</label>
                        <input type="text" class="form-control" id="country" placeholder="Nhập đất nước">
                    </div>
                </form>
            </div>
        </div>

        <!-- Thông tin giỏ hàng -->
        <div class="col-md-6">
            <h2 class="title-cart mb-4">Thông tin giỏ hàng</h2>
            <div class="cart-items p-4 border rounded bg-light">
                @foreach(var cart in Model)
                {
                    @foreach(var cartItem in cart.CartItems)
                    {
                        <div class="d-flex mb-3 border-bottom pb-2">
                            <img src="@cartItem.Product.Thumb" alt="@cartItem.Product.Title" class="img-fluid me-3" style="width: 80px;">
                            <div>
                                <h5 class="mb-1">@cartItem.Product.Title</h5>
                                <p class="text-muted mb-0">Giá: @cartItem.Price.ToString("N0")đ</p>
                                <p class="text-muted mb-0">Giảm giá: - @cartItem.Product.Discount%</p>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="cart-total mt-3">
                <p class="fw-bold">Tổng giá: @Model.Sum(c => c.CartItems.Sum(ci => ci.Price * ci.Quantity)).ToString("N0")đ</p>
            </div>
            <button class="btn btn-primary w-100 mt-4">Mua hàng</button>
        </div>
    </div>
</div>