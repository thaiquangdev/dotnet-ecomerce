@model asp_mvc.Dtos.EditProfileViewModel

<div class="container mt-5">
    <h2 class="mb-4">Chỉnh sửa thông tin cá nhân</h2>
    <div class="card p-4 shadow-sm">
        <form asp-action="EditProfile" method="post">
            <div class="form-group mb-3">
                <label for="name">Tên:</label>
                <input type="text" id="name" asp-for="UserName" class="form-control" placeholder="Nhập tên của bạn">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="phone">Số điện thoại:</label>
                <input type="text" id="phone" asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label for="displayName">Tên hiển thị:</label>
                <input type="text" id="displayName" asp-for="FullName" class="form-control" placeholder="Nhập tên hiển thị">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Cập nhật thông tin</button>
        </form>
    </div>
</div>