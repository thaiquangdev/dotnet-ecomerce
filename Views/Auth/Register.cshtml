@model asp_mvc.Dtos.RegisterAuthViewModel


<div class="container">
    <div class="row">
            <h1>Sign up</h1>
        <div class="col-6">
            <form method="post">
                            <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-person-fill"></i>
                <input type="text" asp-for="UserName" placeholder="Your Username" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-envelope-fill"></i>
                <input type="text" asp-for="Email" placeholder="Your Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-phone-fill"></i>
                <input type="text" asp-for="PhoneNumber" placeholder="Your PhoneNumber" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
             <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-lock-fill"></i>
                <input type="text" asp-for="Password" placeholder="Your Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-key-fill"></i>
                <input type="text" asp-for="ConfirmPassword" placeholder="Your Comfirm Password" type="password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            </div>
            <div class="pt-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            </form>
        </div>
        <div class="col-6">
            <img src="/images/auth.webp" alt="" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @Html.Partial("ToastNotifications")
}