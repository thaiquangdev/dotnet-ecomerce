@model asp_mvc.Dtos.LoginAuthViewModel



<div class="container">
    <div class="row">
            <h1>Login</h1>
        <div class="col-6">
            <form method="post">
                            
            <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-envelope-fill"></i>
                <input type="text" asp-for="Email" placeholder="Your Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           
             <div class="p-2 d-flex align-items-center gap-2">
                <i class="bi bi-lock-fill"></i>
                <input type="text" asp-for="Password" placeholder="Your Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="pt-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            </form>
        </div>
        <div class="col-6">
            <img src="/images/auth.webp" alt="" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @Html.Partial("ToastNotifications")
}